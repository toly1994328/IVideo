<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout
                android:id="@+id/rframe_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:id="@+id/rl_search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?android:attr/actionBarSize"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/id_iv_search_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/ic_arrow_back_24dp"/>

                    <EditText
                            android:id="@+id/ed_header_search"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="搜索"
                            android:focusableInTouchMode="true"
                            android:inputType="text"
                            android:imeOptions="actionSearch"
                            android:textColorHint="#999"
                            android:textSize="18sp"/>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#999999"/>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_gplay_search"
                    android:layout_width="match_parent"
                    app:title="@string/app_name"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@color/colorAccent"
            />

        </FrameLayout>


    </android.support.design.widget.AppBarLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >


        </LinearLayout>

        <FrameLayout
                android:id="@+id/frame_body_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#44999999"
                android:visibility="gone"
        />

    </FrameLayout>


</merge>