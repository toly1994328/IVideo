<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignBottom="@id/id_vv"

        android:background="@color/panel_color"
        android:orientation="horizontal"
        tools:showIn="@layout/activity_player">

    <com.toly1994.ivideo.widget.AlphaImageView
            android:id="@+id/id_iv_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"

            android:src="@drawable/icon_stop_3"/>

    <TextView
            android:id="@+id/id_tv_all_time"
            android:layout_width="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="音量:50%"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    <SeekBar
            android:id="@+id/id_sb_progress"
            android:layout_toEndOf="@id/id_iv_play"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:thumbTint="@android:color/white"

            android:maxHeight="3dp"
            android:minHeight="3dp"

            android:progressDrawable="@drawable/seekbar_bg"
            app:layout_constraintStart_toEndOf="@id/id_iv_play"
            app:layout_constraintEnd_toStartOf="@id/id_tv_all_time"

            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>