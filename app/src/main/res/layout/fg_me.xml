<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/id_login"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@mipmap/default_login_bg"
            android:layout_height="150dp">
        <ImageView
                android:id="@+id/id_iv_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@mipmap/icon_default"/>

        <TextView
                android:id="@+id/id_tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="点击登录"
                app:layout_constraintStart_toStartOf="@id/id_iv_icon"
                app:layout_constraintEnd_toEndOf="@id/id_iv_icon"
                app:layout_constraintTop_toBottomOf="@id/id_iv_icon"
                android:textSize="20sp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/id_login"
            android:layout_margin="15dp"
            android:id="@+id/cv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@drawable/selector_elevation"
            android:visibility="visible"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/id_rv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/id_rv_ability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cv_content">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>